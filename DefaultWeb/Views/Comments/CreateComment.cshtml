@model DefaultWeb.Models.DefaultWebSite.Entities.Comment
@{
    <form id="create-comment">
        <div id="form-fields" class="form-group">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Title" class="col-2 control-label"></label>
            <div id="comment-title">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <label asp-for="Content" class="col-2 control-label"></label>
            <div id="comment-content">
                <textarea asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            @*<input type="hidden" asp-for="Datetime" class="form-control"/>
            <span asp-validation-for="Datetime" class="text-danger"></span>
            <input type="hidden" asp-for="Author" class="form-control"/>
            <span asp-validation-for="Author" class="text-danger"></span>*@
            <input type="hidden" asp-for="SourceId" class="form-control" />
            
        </div>
        <div class="form-group">
            <div id="comment-create">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>

}
