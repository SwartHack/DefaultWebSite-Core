@model DefaultWeb.Models.DefaultWebSite.Source
@{
    <form id="create-source" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div id="form-fields" class="form-group">
            @Html.AntiForgeryToken()
            <label class="col-md-2 control-label" asp-for="SourceName"></label>
            <div class="col-md-6">
                <input class="form-control" asp-for="SourceName" />
                <span asp-validation-for="SourceName" class="text-danger"></span>
            </div>
            <label class="col-md-2 control-label" asp-for="Description"></label>
            <div class="col-md-6">
                <textarea class="form-control" rows="3" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>

}

