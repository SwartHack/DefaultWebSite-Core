<div id="file-ops-main" class="row no-gutters w-100">

    <div id="file-ops-util" class="col-5 no-gutters">
        <div class="element d-flex flex-column justify-content-between h-100">
            <div class="inner d-flex flex-column align-items-center justify-content-center h-100 p-0">

                <div id="row-thumbs" class="row no-gutters w-100">
                    <div id="thumbnails-container" class="col-12 no-gutters h-100">
                        <div class="card-header">
                            <div class="card-title">Thumbnails</div>
                            <a id="file-upload-open" role="button" title="Upload Files...">
                                <i class="fa fa-border fa-upload"></i>
                            </a>
                        </div>

                        <div id="thumbs-list">
                            <ul id="thumbnails" data-bind='template: {name:"thumbnails-template", foreach: fileInfo }'>
                                <li class="h4">No Files</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div id="row-doc" class="row no-gutters w-100">
                    <div id="file-ops-doc" class="col-12 no-gutters">
                        <div class="card-title">File Operations</div>
                        <div class="card-text">
                            @{ Html.RenderPartial("~/Views/Sandbox/Content/FileIO.cshtml"); }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="file-ops-content" class="col-7 no-gutters w-100">
        <div class="element d-flex flex-column justify-content-between">
            <div class="inner d-flex flex-column align-items-center justify-content-center p-0">

                <div class="main-image content-area">
                    <img data-bind="attr: { src : imageViewApi() }" />
                </div>

                <div class="main-document content-area">
                    <embed id="doc-embedded" data-bind="attr: { src : docViewApi() }" style="overflow: auto; width: 100%; height: 100%;" />
                </div>

                <div class="main-video content-area">
                    <video id="video-player" class="video-js" controls autoplay preload="auto" width="800" height="600"></video>
                </div>

                @*<div class="content-info content-info-title">
                        <span data-bind="text: friendlyname()"></span>
                    </div>*@

                <div class="content-info content-info-descr"></div>

                <a class="left carousel-control" id="content-left" href="#" role="button">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" id="content-right" href="#" role="button">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <div id="content-loading">
                    <i class="fa fa-spinner" style="font-size:48px;color:red"></i>
                </div>
            </div>

        </div>
   </div>
</div>

<script>
    require(['dws/fileops-client', 'dws/fileops-content'], function (client, content) {
        $(function () {
            client.init();
            content.init();

            // expand this
            //$('#col-util').hide();
            //$('#col-main').addClass('full-size');
        });
    });
</script>
