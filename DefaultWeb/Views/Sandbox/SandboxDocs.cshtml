<div id="sandbox-docs">
    <div id="sandbox-header" class="card-header">
        <div class="card-title">Welcome to the SandBox</div>
    </div>
    
    <div id="sandbox-wrapper">

        <div class="list-group">
            <div id="sandbox-about" class="sandbox-doc card">
                <div class="card-title">Playing in the Sandbox</div>
                <div class="card-text expand">
                    @{ Html.RenderPartial("Content/About.cshtml"); }
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">Less...</a></div>
            </div>

            <div id="sandbox-comments-mgr" class="sandbox-doc card">
                <div class="card-title">A Comments Manager</div>
                <div class="card-text">
                    @{ Html.RenderPartial("Content/CommentsManager.cshtml"); }
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">More...</a></div>
            </div>

            <div id="sandbox-fileio" class="sandbox-doc card">
                <div class="card-title">File Operations</div>
                <div class="card-text">
                    @{ Html.RenderPartial("Content/FileIo.cshtml"); }
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">More...</a></div>
            </div>

            <div id="sandbox-advworks" class="sandbox-doc card">
                <div class="card-title">Adventure Works</div>
                <div class="card-text">
                    <p> Going Data-First with this fairly complex, semi-forgotten dataset!!!</p>
                    @{ Html.RenderPartial("Content/AdventureWorks.cshtml"); }
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">More...</a></div>
            </div>

            <div id="sandbox-arcgis" class="sandbox-doc card">
                <div class="card-title">Geographic Information Systems (GIS)</div>
                <div class="card-text">
                    <p> ESRI ArcGis API integrations from the Default WebSite.net ArcGIS Server...</p>
                    @{ Html.RenderPartial("Content/ArcGis.cshtml"); }
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">More...</a></div>
            </div>

            <div id="sandbox-hopper" class="sandbox-doc card">
                <div class="card-title">What's in the Hopper</div>
                <div class="card-text">
                    @{ Html.RenderPartial("Content/Hopper.cshtml"); }
                    <p>What may be coming. Want to see something? Have a suggestion?</p>
                </div>
                <div class="card-footer text-right"><a class="sandbox-toggle-text">More&hellip;</a></div>
            </div>
        </div>

    </div>
</div>
 